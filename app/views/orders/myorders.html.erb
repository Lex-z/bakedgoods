<div class="row">
  <div class="col-md-12">
    <h2>
      <p class="text-center">
        My Orders
      </p>
    </h2>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Purchaser</th>
        <th>Food</th>
        <th>Seller</th>
        <th>Quantity</th>
        <th>Pickuptime</th>
        <th>Note</th>
        <th>Actions</th>
      </tr>

      <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.username %></td>
        <td><%= order.food.foodname %></td>
        <td><%= order.food.user.username %></td>
        <td><%= order.quantity %></td>
        <td><%= order.pickuptime %></td>
        <td><%= order.note %></td>
        <td>
          <a href="/orders/<%= order.id %>" class="btn btn-primary">Show</a>
          <a href="/orders/<%= order.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_order/<%= order.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
