<div class="row">
  <div class="col-md-12">
    <h2>
      <p class="text-center">
        My Orders
      </p>
    </h2>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <a href="/foods" class="btn btn-default btn-block">Add Order</a>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Order #</th>
        <th>Item</th>
        <th>Seller</th>
        <th>Quantity</th>
        <th>Pickup Time</th>
        <th>Notes</th>
        <th class="text-center">Actions</th>
      </tr>

      <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.food.foodname %></td>
        <td><%= order.food.user.username %></td>
        <td><%= order.quantity %></td>
        <td><%= order.pickuptime.strftime('%b %e, %Y %H:%M %P') %></td>
        <td><%= order.note %></td>
        <td class="text-center">
          <a href="/orders/<%= order.id %>/edit" class="btn btn-warning">Update</a>
          <a href="/delete_order/<%= order.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
