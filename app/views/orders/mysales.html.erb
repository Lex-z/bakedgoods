<div class="row">
  <div class="col-md-12">
    <h2>
      <p class="text-center">
        My Sales
      </p>
    </h2>
  </div>
</div>
<br>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Order #</th>
        <th>Item</th>
        <th>Purchaser</th>
        <th>Quantity</th>
        <th>Pickup Time</th>
        <th>Notes</th>
        <th class="text-center">Actions</th>
      </tr>

      <% @orders.each do |order| %>
      <% if order.food.user_id == current_user.id %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.food.foodname %></td>

        <td><img src="<%= order.user.image %>"  class="img-circle" width=50px height=50px>
        <%= order.user.username %></td>

        <td><%= order.quantity %></td>
        <td><%= order.pickuptime.strftime('%b %e, %Y %H:%M %P') %></td>
        <td><%= order.note %></td>
        <td class="text-center">
          <a href="/delete_order/<%= order.id %>" class="btn btn-danger" rel="nofollow">Cancel</a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
